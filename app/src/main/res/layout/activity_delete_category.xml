<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProducts">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



        <EditText
            android:id="@+id/delete_category_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_bg"
            android:hint="@string/category_name"
            android:inputType="text"
            android:textSize="20sp" />


        <Button
            android:id="@+id/delete_category_button"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:background="@drawable/button_box_purple"
            android:text="@string/delete_category"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="Deletecategory"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"/>


    </RelativeLayout>
</ScrollView>